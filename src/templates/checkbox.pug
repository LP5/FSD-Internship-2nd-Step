mixin checkbox__form
  form.buttons
    fieldset
      legend Checkbox Buttons
      .checkbox
        block

mixin checkbox(option)
  .wrapper
    input(type="checkbox" id="checkbox")
    label(for="checkbox")= option

mixin checkbox__form--rich
  form.buttons
    fieldset
      legend Rich Checkbox Buttons
      .checkbox.checkbox--rich
        block

mixin checkbox--rich(option, description)
  .wrapper
    input(type="checkbox" id="checkbox")
    label(for="checkbox")
      span= option
      span= description
